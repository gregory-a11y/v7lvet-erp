{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded"
		}
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		},
		"linter": {
			"enabled": false
		},
		"formatter": {
			"enabled": false
		}
	},
	"overrides": [
		{
			"includes": ["**/*.css"],
			"linter": { "enabled": false },
			"formatter": { "enabled": false }
		}
	],
	"files": {
		"includes": [
			"**",
			"!!**/node_modules",
			"!!**/.next",
			"!!**/convex/_generated",
			"!!**/components/ui"
		]
	}
}
